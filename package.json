{
  "name": "snapjs-ui",
  "version": "0.1.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/theScottyJam/snap.js.git"
  },
  "homepage": "https://thescottyjam.github.io/snap.js",
  "dependencies": {
    "@emotion/css": "^11.9.0",
    "@testing-library/dom": "^8.14.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^14.2.1",
    "gh-pages": "^4.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^8.0.3",
    "react-scripts": "5.0.1",
    "react-syntax-highlighter": "^15.5.0",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "prettier": "^2.7.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3"
  },
  "scripts": {
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "start": "node ./buildContent.js && react-scripts start",
    "build": "node ./buildContent.js && react-scripts build",
    "test-watch": "node ./buildContent.js && react-scripts test",
    "test": "react-scripts test --watchAll=false",
    "pre-commit": "bash precommit.sh",
    "build-content": "node ./buildContent.js",
    "lint-fix": "prettier --single-quote --arrow-parens avoid --write $(git diff --name-only --cached | grep -E '(src|content)/.*\\.(js|jsx|ts|tsx|json|css|scss|md)')",
    "eject": "react-scripts eject",
    "prepare": "husky install"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,content}/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "npm run pre-commit"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
